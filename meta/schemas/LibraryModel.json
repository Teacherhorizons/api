{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/LibraryModel",
  "definitions": {
    "LibraryModel": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(application|general|job|meta|regional|school|staff|subject|system|teacher|time|user)(-?)[a-zA-Z0-9_]*(?<!(Id|_id))$": {
          "oneOf": [
            {
              "$ref": "#/definitions/LibraryModel-Attribute"
            },
            {
              "$ref": "#/definitions/LibraryModel-Relationship"
            }
          ]
        },
        "^(regional-city_nearestWeatherStationId)$": {
          "$ref": "#/definitions/LibraryModel-Attribute"
        },
        "^(application|general|job|meta|regional|school|staff|subject|system|teacher|time|user)[-]*[a-zA-Z]*_[a-zA-Z_]*[a-z1]Id$": {
          "$ref": "#/definitions/LibraryModel-RelationshipAttribute"
        }
      },
      "required": [],
      "title": "LibraryModel"
    },
    "LibraryModel-Attribute": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "items": {
          "type": "object"
        },
        "example": {
          "type": ["array", "number", "string", "boolean"]
        },
        "format": {
          "type": "string"
        },
        "nullable": {
          "type": "boolean",
          "default": false
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0
        },
        "maximum": {
          "type": "integer"
        },
        "minimum": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        },
        "deprecated": {
          "type": "boolean",
          "const": true
        }
      },
      "required": ["type", "example"],
      "title": "LibraryModel-Attribute"
    },
    "LibraryModel-RelationshipAttribute": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "integer"
        },
        "example": {
          "oneOf": [
            {
              "const": 1
            },
            {
              "const": 20000101
            }
          ]
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["description", "example", "type"],
      "title": "LibraryModel-RelationshipAttribute"
    },
    "LibraryModel-Relationship": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "object"
        },
        "additionalProperties": {
          "const": false
        },
        "properties": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": {
                  "const": "string"
                },
                "example": {
                  "const": "1"
                },
                "description": {
                  "type": "string",
                  "pattern": "^Relationship to ([a-z])([a-zA-Z-]*)$"
                }
              },
              "required": ["description", "example", "type"]
            }
          },
          "required": ["id"]
        },
        "required": {
          "const": ["id"]
        }
      },
      "required": ["type", "additionalProperties", "properties", "required"],
      "title": "LibraryModel-Relationship"
    }
  }
}
